{% extends 'layout.njk' %}

{% block head %}
    <title>Admin - Gerenciar Chefs</title>
{% endblock head %}

{% block header %}
    {% include 'admin/_headerAdmin.njk' %}
{% endblock header %}

{% block content %}

    <div class="recipe-page admin chef">
        <main>
            <div class="header-contents">
                <h2>Chef: Rodrigo Piva</h2>
                <a class="form-button" href="/admin/recipes/{{recipe.id}}/edit">Editar chef</a>
            </div>
            <div class="avatar-image">
                <img src="https://images.unsplash.com/photo-1569931727762-93dd90109ecd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="">
            </div>
            <p class="recipe-name">Rodrigo Piva</p>
            <p class="recipe-author">4 receitas</p>
        </main>

        <section>
            <h2>Receitas</h2>
            <div class="cards admin">
            {% for recipe in recipes %}
                <div class="card" id="{{loop.index -1}}">
                    <div class="card-image">
                        <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
                    </div>
                    <div class="card-info">
                        <p class="recipe-name">{{recipe.title}}</p>
                        <p class="recipe-author">por {{recipe.author}}</p>
                        <a href="#">Visualizar</a>
                    </div>        
                </div>
            {% endfor %}  
            </div>       
        </section>

    </div>


{% endblock content %}