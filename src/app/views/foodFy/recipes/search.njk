{% extends 'layout.njk' %}

{% block head %}
    <title>Buscando receitas</title>
{% endblock head %}

{% block filterHeader %}
    {% include '../../_filterHeader.njk' %}
{% endblock filterHeader %}

{% block content %}
    <div class="header-contents search-page">
        <h2>Buscando por "{{filter}}" </h2>
    </div>

    <section class="cards">
        {% for recipe in recipes %}
            <div class="card recipe_card" id="{{recipe.id}}">
            <div class="card-image">
                <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
            </div>
            <div class="card-info">
                <p class="recipe-name">{{recipe.title}}</p>
                <p class="recipe-author">por {{recipe.chef_name}}</p>
            </div>
        </div>
        {% endfor %}   
    </section>
    <div 
        class="pagination"
        data-page={{pagination.page}}
        data-total={{pagination.total}}
        data-filter={{filter}}
    ></div>
{% endblock content %}

{% block scripts %}
        <script src="/paginate.js"></script>
{% endblock scripts %}